# idea-generator Environment Variables
# Copy this file to .env and fill in your values

# GitHub Configuration
# Required: GitHub repository to analyze (format: owner/repo)
IDEA_GEN_GITHUB_REPO=

# Optional: GitHub API token for private repositories or higher rate limits
# Get a token from: https://github.com/settings/tokens
# Required scopes: 'public_repo' for public repos, 'repo' for private repos
IDEA_GEN_GITHUB_TOKEN=

# Ollama Configuration
# Ollama server host (default: http://localhost)
IDEA_GEN_OLLAMA_HOST=http://localhost

# Ollama server port (default: 11434)
IDEA_GEN_OLLAMA_PORT=11434

# Model Configuration
# Model name for the innovator persona (default: llama3.2:latest)
# The innovator generates creative ideas and novel solutions
IDEA_GEN_MODEL_INNOVATOR=llama3.2:latest

# Model name for the critic persona (default: llama3.2:latest)
# The critic evaluates ideas critically and identifies potential issues
IDEA_GEN_MODEL_CRITIC=llama3.2:latest

# Model name for the grouping agent (default: llama3.2:latest)
# The grouping agent clusters similar issues together
# Can use custom modelfile: idea-generator-grouping
IDEA_GEN_MODEL_GROUPING=llama3.2:latest

# Model name for the summarizing agent (default: llama3.2:latest)
# The summarizing agent generates concise summaries with quantitative metrics
# Can use custom modelfile: idea-generator-summarizer
IDEA_GEN_MODEL_SUMMARIZING=llama3.2:latest

# Processing Configuration
# Number of items to process in a batch (default: 10)
IDEA_GEN_BATCH_SIZE=10

# Maximum number of concurrent workers (default: 4)
IDEA_GEN_MAX_WORKERS=4

# Directory Configuration
# Directory for generated output (default: ./output)
IDEA_GEN_OUTPUT_DIR=output

# Directory for ingested data (default: ./data)
IDEA_GEN_DATA_DIR=data

# Directory for persona metadata and prompts (default: ./personas)
IDEA_GEN_PERSONA_DIR=personas

# GitHub API Configuration
# Number of items per page for GitHub API requests (default: 100, max: 100)
IDEA_GEN_GITHUB_PER_PAGE=100

# Maximum number of retries for GitHub API requests (default: 3)
IDEA_GEN_GITHUB_MAX_RETRIES=3

# Maximum number of issues to ingest per repository (default: none/unlimited)
# Useful for large repositories - issues are sorted by most recently updated
# Recommended: 100-200 for repos with >1000 open issues
# IDEA_GEN_GITHUB_ISSUE_LIMIT=100

# Text Processing Configuration
# Maximum combined length of issue body and comments in characters (default: 8000)
IDEA_GEN_MAX_TEXT_LENGTH=8000

# Enable noise/spam filtering for issues (default: true)
IDEA_GEN_NOISE_FILTER_ENABLED=true

# LLM/Summarization Configuration
# LLM request timeout in seconds (default: 120.0)
IDEA_GEN_LLM_TIMEOUT=120.0

# Maximum number of retries for LLM requests (default: 3)
IDEA_GEN_LLM_MAX_RETRIES=3

# Maximum tokens for issue text in summarization (default: 4000)
IDEA_GEN_SUMMARIZATION_MAX_TOKENS=4000

# Maximum cache file size in bytes (default: 1000000 = 1MB)
IDEA_GEN_CACHE_MAX_FILE_SIZE=1000000

# Grouping Configuration
# Maximum number of summaries to process in a single grouping batch (default: 20)
IDEA_GEN_GROUPING_MAX_BATCH_SIZE=20

# Maximum character count for a single grouping batch (default: 50000)
IDEA_GEN_GROUPING_MAX_BATCH_CHARS=50000

# Scoring/Ranking Configuration
# Weight for novelty metric in composite score (default: 0.25)
# How innovative or unique is this idea
IDEA_GEN_RANKING_WEIGHT_NOVELTY=0.25

# Weight for feasibility metric in composite score (default: 0.25)
# How practical to implement
IDEA_GEN_RANKING_WEIGHT_FEASIBILITY=0.25

# Weight for desirability metric in composite score (default: 0.30)
# How valuable to users/stakeholders
IDEA_GEN_RANKING_WEIGHT_DESIRABILITY=0.30

# Weight for attention metric in composite score (default: 0.20)
# Community engagement level
IDEA_GEN_RANKING_WEIGHT_ATTENTION=0.20

# Number of top ideas to include in Markdown report (default: 10)
IDEA_GEN_TOP_IDEAS_COUNT=10

# NOTE: Ranking weights must sum to 1.0 (within 0.01 tolerance)
# The pipeline will validate this at runtime
